include-file = $HOME/.config/polybar/colors/frappe.ini

[bar/top]
; Make bar apair below window
;override-redirect = true
monitor = ${env:MONITOR}
wm-restack = i3

; Size
width  = 100%
height = 32pt
fixed-center = true

; Position
bottom = false

; Radius
radius = 0

; Colors
background = ${colors.crust}
foreground = ${colors.text}

; Underline
line-size  = 2
line-color = ${colors.sky}

; Padding
padding-left  = 0
padding-right = 0

; Margin of modules
module-margin-left  = 0
module-margin-right = 0

font-0 = JetBrains Mono Nerd Font:style=Regular:size=10;3
; font-1 = Font Awesome:style=Regular:size=12;3

; Modules
modules-left   = i3
modules-center = time date
modules-right  = filesystem memory cpu network lock logout poweroff

[module/i3]
type = internal/i3

; Pin workspaces
pin-workspaces = true

; Mouse click
enable-click = true

; Mouse scroll
enable-scroll = false

; Sort
index-sort = false

; Display icons
fuzzy-match = true

; Icons
ws-icon-0       = 1;
ws-icon-1       = 2;
ws-icon-2       = 3;
ws-icon-3       = 4;
ws-icon-4       = 5;
ws-icon-default = 

; Focused label
label-focused            = %icon%
label-focused-foreground = ${colors.mauve}
label-focused-padding    = 2

; Unfocused labels
label-unfocused         = %icon%
label-unfocused-padding = ${self.label-focused-padding}

; Visible labels
label-visible         = %icon%
label-visible-padding = ${self.label-focused-padding}

; Urgent labels
label-urgent            = %icon%
label-urgent-foreground = ${colors.red}
label-urgent-padding    = ${self.label-focused-padding}

[module/time]
type = internal/date

; Update interval
interval = 1.0

; Format
time = %%{F#fff}%H:%M:%S%%{F-}

; Label
label         =   %time%
label-padding = 2

[module/date]
type = internal/date

; Update interval
interval = 1.0

; Format
date = %%{F#999}%d-%m-%Y%%{F-} 

; Label
label         =   %date%
label-padding = 2

[module/network]
type = internal/network

; Interface
interface = ens33

; Connected label
label-connected            = 
label-connected-foreground = ${colors.teal}
label-connected-padding    = 2pt

; Disconnected label
label-disconnected            = 
label-disconnected-foreground = ${colors.red}
label-disconnected-padding    = 2pt

[module/lock]
type = custom/text

; Label
content            = 
; content-foreground = ${colors.foreground}
content-padding    = 2pt

; Mouse click
click-left = i3lock-fancy -p

[module/logout]
type = custom/text

; Label
content            = 
; content-foreground = ${colors.foreground}
content-padding    = 2pt

; Mouse click
click-left = i3-msg exit

[module/poweroff]
type = custom/text

; Label
content            = 
content-foreground = ${colors.red}
content-padding    = 2pt

; Mouse click
click-left = poweroff

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = %{F#F0C674}%mountpoint%%{F-} %percentage_used%%
label-mounted-padding = 1

label-unmounted = %mountpoint% not mounted
label-unmounted-padding = 1
; label-unmounted-foreground = ${colors.nord3}

[module/memory]
type = internal/memory
interval = 2
format-prefix = "RAM "
format-prefix-foreground = ${colors.yellow}
format-padding = 1
label = %percentage_used:2%%

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "CPU "
format-prefix-foreground = ${colors.yellow}
format-padding = 1
label = %percentage:2%%

