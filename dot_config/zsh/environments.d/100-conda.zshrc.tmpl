{{- if eq .chezmoi.os "darwin" }}
$_path = "/usr/local/Caskroom/miniconda/base"
{{- else }}
$_path = "$HOME/.local/miniconda3"
{{- end }}

__conda_setup="$(${_path}/bin/conda 'shell.zsh' 'hook' 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__conda_setup"
else
    if [ -f "${_path}/etc/profile.d/conda.sh" ]; then
        . "${_path}/etc/profile.d/conda.sh"
    else
        export PATH="${_path}/bin:$PATH"
    fi
fi
unset __conda_setup
# <<< conda initialize <<<

