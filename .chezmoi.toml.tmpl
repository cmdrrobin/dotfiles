{{- $git_email := promptString "email for git" -}}
{{- $ssh_pub_key := promptString "SSH public key" -}}
{{- $workspace := promptString "work space" -}}
{{- $homebrew_prefix := env "HOMEBREW_PREFIX" -}}

[edit]
    command = "nvim"

[data]
    workspace = "{{ $workspace }}"

[data.git]
    email = "{{ $git_email }}"
    sign_key = "{{ $ssh_pub_key }}"

{{- if eq .chezmoi.os "darwin" }}
[data.homebrew]
    prefix = "{{ $homebrew_prefix }}"
{{- end }}
